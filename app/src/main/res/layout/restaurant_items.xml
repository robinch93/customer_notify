<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menuImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/menuNameTv"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/menuImg"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/menuImg"
        android:layout_toRightOf="@+id/menuImg"
        android:textColorHighlight="@color/design_default_color_primary"
        android:text="Title" />

    <TextView
        android:id="@+id/menuDescTv"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/menuNameTv"
        android:layout_alignLeft="@+id/menuNameTv"
        android:layout_below="@+id/menuNameTv"
        android:layout_marginTop="15dp"
        android:text="Description" />

    <TextView
        android:id="@+id/menuPriceTv"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/menuImg"
        android:layout_alignStart="@+id/menuDescTv"
        android:layout_alignLeft="@+id/menuDescTv"
        android:text="Price" />

    <TextView
        android:id="@+id/menuQtyTv"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/menuPriceTv"
        android:layout_alignBottom="@+id/menuPriceTv"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/menuPriceTv"
        android:layout_toRightOf="@+id/menuPriceTv"
        android:text="Quantity" />
</RelativeLayout>

